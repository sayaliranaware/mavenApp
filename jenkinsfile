pipeline {
  tools {
    maven 'Maven'
  }
  agent any
  stages  {
    stage ('Initialize')  {
      steps {
        sh  ''' 
                     echo "PATH = $(PATH)"
                     echo "M2_HOME = $(M2_HOME)"
             '''
      }
    }
    
    stage ('Bulld') {
      steps {
      sh 'mvn clean package'
      }
    }
    
    stage ('Deploy-To-Tomcat') {
      steps {
        sshagent(['tomcat']) {
          sh 'scp -0 StrictHostkeyChecking=no target/*.jar ubuntu@3.19.85.59/home/ubuntu/prod/apache-tomcat-9.0.65/webapps/webapp.jar'
          }
      }
    }
  
  }
}  
